{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/node_modules/*",
                "src/types/*"
            ]
        }
    },
    "files": [
        "src/index.ts",
        "src/types/custom/index.d.ts"
    ],
    "include": [
        "src/**/*"
    ]
}